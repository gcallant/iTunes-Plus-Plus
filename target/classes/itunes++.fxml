<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?><?import javafx.scene.canvas.Canvas?><?import javafx.scene.control.*?><?import javafx.scene.image.Image?><?import javafx.scene.image.ImageView?><?import javafx.scene.layout.*?><?import javafx.scene.text.*?>

<Pane maxHeight="-Infinity"
      maxWidth="-Infinity"
      minHeight="-Infinity"
      minWidth="-Infinity"
      prefHeight="768.0"
      prefWidth="1024.0"
      fx:controller="sample.Controller"
      xmlns="http://javafx.com/javafx/8.0.92"
      xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox alignment="CENTER"
              layoutX="286.0"
              layoutY="29.0"
              nodeOrientation="LEFT_TO_RIGHT"
              prefHeight="150.0"
              prefWidth="452.0">
            <children>
                <ImageView id="buttonPreviousSong"
                           accessibleText="Previous Song"
                           fitHeight="150.0"
                           fitWidth="200.0"
                           onMouseClicked="#handlePreviousSongButtonAction"
                           pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@back-blue.png" />
                    </image>
                </ImageView>
                <ImageView id="buttonPlay"
                           accessibleRole="BUTTON"
                           accessibleText="Play"
                           fitHeight="150.0"
                           fitWidth="200.0"
                           onMouseClicked="#handlePlayButtonAction"
                           pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@play-green.png" />
                    </image>
                </ImageView>
                <ImageView id="buttonNextSong"
                           accessibleText="Next Song"
                           fitHeight="150.0"
                           fitWidth="200.0"
                           onMouseClicked="#handleNextSongButtonAction"
                           pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@forward-blue.png" />
                    </image>
                </ImageView>
            </children>
        </HBox>
        <TextField id="searchBar"
                   accessibleText="Enter a search query"
                   alignment="CENTER"
                   layoutX="2.0"
                   layoutY="214.0"
                   prefHeight="25.0"
                   prefWidth="1024.0"
                   promptText="Enter song name, artist name or genre to search">
            <font>
                <Font size="18.0" />
            </font>
        </TextField>
        <ImageView id="buttonImport"
                   accessibleText="Import music into library"
                   fitHeight="50.0"
                   fitWidth="50.0"
                   layoutX="29.0"
                   layoutY="598.0"
                   onMouseClicked="#handleImportButtonAction"
                   pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@import-pink.png" />
            </image>
        </ImageView>
        <Canvas accessibleText="Results"
                height="600.0"
                layoutX="79.0"
                layoutY="298.0"
                width="800.0" />
    </children>
</Pane>
